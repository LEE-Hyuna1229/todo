> def solution(n):
     binlist=[]
     letter = str(n)
     for i in range(0,len(letter)):
         binlist.append(letter[i])
     binlist.sort(reverse=True)
     # numberlist = list(map(int,binlist))
     number = ''.join(binlist)
     return int(number)
     
